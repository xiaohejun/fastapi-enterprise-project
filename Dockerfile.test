# 使用官方Python基础镜像
FROM python:3.10-slim

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1
ENV TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_password@host.docker.internal:5433/test_db

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制项目文件
COPY . .

# 安装Python依赖
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt -r requirements-test.txt

# 暴露端口（测试不需要，但保留）
EXPOSE 8000

# 启动测试命令
CMD ["pytest", "-v", "--cov=app", "--cov-report=term-missing", "--cov-report=html:coverage/html"]